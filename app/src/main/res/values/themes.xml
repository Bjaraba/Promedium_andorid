<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Promedium" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/worksans_normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.Theme.Course" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/worksans_normal</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialogPersonalizadoBlue" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/blue</item>
        <item name="fontFamily">@font/worksans_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlertDialogPersonalizadoPink" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:background">@color/pink</item>
        <item name="fontFamily">@font/worksans_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Promedium" parent="Base.Theme.Promedium" />
</resources>